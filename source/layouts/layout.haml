!!!
%html
  :javascript
    rootPath = '/entwicklungsbarometer';
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %title= current_page.data.title || "The Middleman"
    = stylesheet_link_tag "http://libs.cartocdn.com/cartodb.js/v3/3.11/themes/css/cartodb.css"
    = stylesheet_link_tag "http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css"
    = stylesheet_link_tag "biccmap", "normalize", "all"
    = partial "partials/navigation"
    = partial "partials/breadcrump"
  %body
    .content
      = yield
    = partial "partials/footer"
    %script(src="http://libs.cartocdn.com/cartodb.js/v3/3.11/cartodb.js")
    = javascript_include_tag  "all"
